<h2>Lista de Categorias:</h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success">Nova categorias</button></a>

{{#each categorias}}
<div class="card mt-4">
    <div class="card-body">
        <h4>{{nome}}</h4>
        <small>Slug:{{slug}}</small><br>
        <small>Data:{{date}}</small><br><br>
        <a href="/admin/categorias/edit/{{_id}}"><button class="mt-4  btn btn-success">Editar Categoria</button></a>
        <form action="/admin/categorias/deletar" method="POST">
            <input type="hidden" name="id" value="{{_id}}">
            <button type="submit" class="btn btn-danger mt-2">Deletar Categoria</button>
        </form>
    </div>
</div>
{{else}}
<h4 class="mt-3">Nenhuma Categoria Registrada</h4>
{{/each}}