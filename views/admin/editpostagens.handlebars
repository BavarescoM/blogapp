{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}

<div class="card">
    <div class="card-body">
        <h4>Editar Postagem:</h4>
        <form action="/admin/postagens/edit" method="POST">
            <input type="hidden" value="{{postagens.id}}" name="id">
            <label for="titulo">TÃ­tulo:</label>
            <input type="text" name="titulo" class="form-control" value={{postagens.titulo}}>
            <label for="slug">Slug:</label>
            <input type="text" name="slug" class="form-control" value={{postagens.slug}}>
            <label for="descricao">Descricao:</label>
            <input type="text" name="descricao" class="form-control" value={{postagens.descricao}}>
            <label for="conteudo">Conteudo:</label>
            <textarea name="conteudo" class="form-control">{{postagens.conteudo}}</textarea>
            <label for="categoria">Categoria</label>
            <select name="categoria" class="custom-select">
                {{#each categorias}}
                <option value="{{_id}}">{{nome}}</option>
                {{else}}
                <option value="0">Nenhuma Categoria Registrada</option>
                {{/each}}
            </select>

            <button class="btn btn-success mt-4">Editar Postagem</button>
        </form>
    </div>
</div>